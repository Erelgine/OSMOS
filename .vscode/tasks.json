{
    /* OSMOS' tasks for Visual Studio Code
     * See https://go.microsoft.com/fwlink/?LinkId=733558
     * for the documentation about the tasks.json format */
    "version": "2.0.0",
    "tasks": [
        {
            "label": "default (build + run)",
            "type": "shell",
            "command": "make"
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "make build.all",
        },
        {
            "label": "force-build",
            "type": "shell",
            "command": "make build.all-force"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "make run",
        }
    ]
}